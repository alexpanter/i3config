# $mod+X to take a screen shot
bindsym --release $mod+x exec xfce4-screenshooter

# Press $mod+o followed by a key (configured below) to perform
# a specific action. Press Return to perform the action, or Escape
# to cancel
# set $mod+o mode "$mode_launcher"
bindsym $mod+o mode "$mode_launcher"
mode "$mode_launcher" {
  bindsym g exec google-chrome
  bindsym e exec /usr/bin/emacs25
  bindsym s exec spotify
  bindsym t exec thunar
  bindsym r exec redshift-gtk
  bindsym c exec /home/alexander/bin/calendar

  bindsym Escape mode "default"
  bindsym Return mode "default"
}

# opened windows will have no borders. Values are (normal|none|pixel)
# Alternative: "new_window pixel <px>"
new_window none

# automatically create the awesome caps/ctrl keybinding
# alternative: use "exec_always" to also run on i3 restart ($mod+Shift+r)
exec_always --no-startup-id setxkbmap -option caps:ctrl_modifier

# wallpaper, 'cause why not
exec_always --no-startup-id feh --bg-scale ~/Pictures/games.jpg

# transparent terminal
# exec_always xcompmgr -c -f -n

# quick pause button
bindsym $mod+p exec pause

# gnome session (wifi, battery, bluetooth control, etc.)
exec_always --no-startup-id gnome-session
exec_always nm-applet

# mod+alt+(left|right) to switch to next/previous workspace
bindsym $mod+Ctrl+Right workspace next_on_output
bindsym $mod+Ctrl+Left workspace prev_on_output
